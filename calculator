print("Program wykonuje działania na dwoch liczbach")

a = int(input("Podaj pierwsza liczbe: "))
print("Wybierz jedno z działan: ")
c = str(input("+, -, *, / "))
b = int(input("Podaj druga liczbe: "))

if c == '+':
    print(f"Wynik to: {a + b}")
if c == '-':
    print(f"Wynik to: {a - b}")
if c == '*':
    print(f"Wynik to: {a * b}")
if c == '/':
    if b == 0:
        print("Error: Nie dzieli się przez zero.")
    else:
        print(f"Wynik to: {a / b}")
